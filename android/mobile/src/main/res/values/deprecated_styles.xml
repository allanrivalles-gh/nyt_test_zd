<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    These are legacy styles that we should discontinue. If a new style is proposed by
    design, it should be discussed and added to either styles_text or styles_widget.
    -->

    <style name="Widget" />

    <style name="Widget.Athletic.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Athletic.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/global_spacing_44</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/global_text_size_caption</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <style name="Widget.Athletic.Button.Dark" parent="Widget.Athletic.Button">
        <item name="android:background">@drawable/button_background_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Athletic.Button.Light" parent="Widget.Athletic.Button">
        <item name="android:background">@drawable/button_background_light</item>
        <item name="android:textColor">@color/global_text_primary</item>
    </style>

    <style name="Widget.Athletic.Drawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/global_color_control_normal</item>
    </style>

    <!-- Tt Global -->
    <style name="TA.Ath" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TA.Ath.Title2" parent="TA.Ath">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TA.Ath.Title2.Medium" parent="TA.Ath.Title2">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Tt Global Headline -->
    <style name="TA.Ath.Headline" parent="TA.Ath">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TA.Ath.Headline.Medium" parent="TA.Ath.Headline">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TA.Ath.Headline.Bold" parent="TA.Ath.Headline">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TA.Ath.SubHeadline" parent="TA.Ath">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TA.Ath.SubHeadline.Medium" parent="TA.Ath.SubHeadline">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TA.Ath.SubHeadline.Bold" parent="TA.Ath.SubHeadline">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Tt Global Body -->
    <style name="TA.Ath.Body1" parent="TA.Ath">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TA.Ath.Body1.Medium" parent="TA.Ath.Body1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TA.Ath.Body2" parent="TA.Ath">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TA.Ath.Body2.Medium" parent="TA.Ath.Body2">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TA.Ath.Body3" parent="TA.Ath">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="TA.Ath.Body3.Bold" parent="TA.Ath.Body3">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TA.Ath.Body4" parent="TA.Ath">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TA.Ath.Body4.Medium" parent="TA.Ath.Body4">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Tt Global Caption -->
    <style name="TA.Ath.Caption1" parent="TA.Ath">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TA.Ath.Caption1.Italic" parent="TA.Ath.Caption1">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="TA.Ath.Caption2" parent="TA.Ath">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TA.Ath.Caption2.Bold" parent="TA.Ath.Caption2">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- TT Button -->
    <style name="TA.Ath.Button" parent="TA.Ath">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TA.Ath.Button.Dark" parent="TA.Ath.Button">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- TT Gifts -->
    <style name="TA.Ath.Gifts.Title" parent="TA.Ath.Title2.Medium" />

    <style name="TA.Ath.Gifts.SubTitle" parent="TA.Ath.Body1.Medium" />

    <style name="TA.Ath.Gifts.Item.Title" parent="TA.Ath.SubHeadline.Medium" />

    <style name="TA.Ath.Gifts.Description" parent="TA.Ath.Body2">
        <item name="android:textColor">#707070</item>
    </style>

    <style name="TA.Ath.Gifts.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#4D4D4D</item>
        <item name="android:background">@drawable/selector_gifts_edit_text</item>
    </style>

    <style name="TA.Ath.Gifts.Success.Title" parent="TA.Ath.Gifts.Title" />

    <style name="TA.Ath.Gifts.Success.SubTitle" parent="TA.Ath.Gifts.SubTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TA.Ath.Gifts.Success.Body" parent="TA.Ath.Body2" />

    <style name="TA.Ath.Gifts.Success.Footnote" parent="TA.Ath.Caption1.Italic">
        <item name="android:textColor">#707070</item>
    </style>

    <!-- TT Global Old -->
    <style name="TextAppearance.Athletic.Body1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/global_text_size_body_1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.Athletic.Title.Toolbar" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/global_text_primary</item>
    </style>

    <!-- TT Gift Sheet Dialog -->
    <style name="Widget.GiftSheetDialogTheme" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_gift_sheet_dialog_bg</item>
    </style>


    <!-- TT Podcast Big Player -->
    <style name="Widget.BigPlayerSheetDialogTheme" parent="@style/Widget.Design.BottomSheet.Modal"></style>

    <!-- Deprecated Text Styles -->
    <style name="TextAppearance.Ath.Headline.ExtraExtraSmall">
        <item name="android:fontFamily">@font/tiempos_text_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.Ath.Utility.Sans.Regular.ExtraSmall.Variant1">
        <item name="android:textColor">?attr/colorOnBackgroundVariant1</item>
    </style>

    <style name="TextAppearance.Ath.Utility.Sans.Regular.ExtraSmall.Variant2">
        <item name="android:textColor">?attr/colorOnBackgroundVariant2</item>
    </style>

    <style name="TextAppearance.Ath.Utility.Sans.Regular.Large.Variant1">
        <item name="android:textColor">?attr/colorOnBackgroundVariant1</item>
    </style>

    <style name="TextAppearance.Ath.TAGS.SANS.MEDIUM.LARGE.VARIANT1">
        <item name="android:textColor">?attr/colorOnBackgroundVariant1</item>
    </style>

    <style name="TextAppearance.Ath.TAGS.SANS.MEDIUM.LARGE.VARIANT2">
        <item name="android:textColor">?attr/colorOnBackgroundVariant2</item>
    </style>

    <style name="TextAppearance.Ath.ContentBody.Regular.Small.Variant1">
        <item name="android:textColor">?attr/colorOnBackgroundVariant1</item>
    </style>

</resources>