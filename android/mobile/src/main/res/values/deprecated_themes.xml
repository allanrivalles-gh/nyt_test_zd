<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Athletic" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/global_color_primary</item>
        <item name="colorPrimaryVariant">@color/ath_grey_70</item>
        <item name="colorPrimaryDark">@color/global_color_primary_dark</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlNormal">@color/global_color_control_normal</item>
        <item name="android:windowBackground">@color/global_bg_back</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorSecondary">@color/global_text_secondary</item>
        <item name="drawerArrowStyle">@style/Widget.Athletic.Drawer</item>
        <item name="colorSurface">@color/ath_grey_70</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnBackgroundVariant1">@color/ath_grey_40</item>
        <item name="colorOnBackgroundVariant2">@color/ath_grey_50</item>
    </style>


    <!-- Base application theme -->
    <style name="Theme.Athletic.Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/global_color_primary</item>
        <item name="colorPrimaryVariant">@color/ath_grey_20</item>
        <item name="colorPrimaryDark">@color/global_color_primary_dark</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlNormal">@color/global_color_control_normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorSecondary">@color/global_text_secondary</item>
        <item name="drawerArrowStyle">@style/Widget.Athletic.Drawer</item>
        <item name="colorSurface">@color/ath_grey_20</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnBackgroundVariant1">@color/ath_grey_50</item>
        <item name="colorOnBackgroundVariant2">@color/ath_grey_40</item>
    </style>

    <!-- Dark theme with actionBar -->
    <style name="Theme.Athletic.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/global_color_primary</item>
        <item name="colorPrimaryVariant">@color/ath_grey_70</item>
        <item name="colorPrimaryDark">@color/global_color_primary_dark</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlNormal">@color/global_color_button</item>
        <item name="android:windowBackground">@color/global_bg_back</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorSecondary">@color/global_text_secondary</item>
        <item name="drawerArrowStyle">@style/Widget.Athletic.Drawer</item>
        <item name="colorSurface">@color/ath_grey_70</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnBackgroundVariant1">@color/ath_grey_40</item>
        <item name="colorOnBackgroundVariant2">@color/ath_grey_50</item>
    </style>

    <style name="Theme.Athletic.Transparent.Dark" parent="@style/Theme.Athletic.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/global_text_primary</item>
    </style>


    <style name="Theme.Athletic.Controls">
        <item name="colorAccent">@color/global_switch_color</item>
    </style>


    <style name="Theme.Athletic.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/global_bg_back_inverse</item>
        <item name="android:textColor">@color/global_text_primary_inverse</item>
        <item name="android:textColorPrimary">@color/global_text_primary_inverse</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlActivated">@color/comments_input_cursor</item>
    </style>

    <style name="Theme.Athletic.Dialog.Dark" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/dark_grey_2</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorPrimary">@color/global_text_primary</item>
    </style>

    <style name="Theme.Athletic.ActionBar.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/global_color_button</item>
    </style>

    <!-- TT BottomSheetDialog Theme -->
    <style name="Theme.Athletic.GiftSheetDialog" parent="BaseTheme.Athletic.GiftSheetDialog" />

    <style name="BaseTheme.Athletic.GiftSheetDialog"
        parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <!-- Abstract theme - should not be used directly. -->
        <item name="colorPrimary">@color/global_color_primary</item>
        <item name="colorPrimaryDark">@color/global_color_primary_dark</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlNormal">@color/global_color_control_normal</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorSecondary">@color/global_text_secondary</item>
        <item name="drawerArrowStyle">@style/Widget.Athletic.Drawer</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="bottomSheetStyle">@style/Widget.GiftSheetDialogTheme</item>
    </style>


    <!-- TT BottomSheetDialog Theme -->
    <style name="Theme.Athletic.BigPlayerSheetDialog" parent="BaseTheme.Athletic.BigPlayerSheetDialog" />

    <style name="BaseTheme.Athletic.BigPlayerSheetDialog"
        parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <!-- Abstract theme - should not be used directly. -->
        <item name="colorPrimary">@color/global_color_primary</item>
        <item name="colorPrimaryDark">@color/global_color_primary_dark</item>
        <item name="colorAccent">@color/global_color_accent</item>
        <item name="colorControlNormal">@color/global_color_control_normal</item>
        <item name="android:textColor">@color/global_text_primary</item>
        <item name="android:textColorSecondary">@color/global_text_secondary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="bottomSheetStyle">@style/Widget.BigPlayerSheetDialogTheme</item>
    </style>

</resources>