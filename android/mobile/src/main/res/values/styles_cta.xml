<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Athletic Design System CTA Styles:
    These are the approved, reusable styles for all CTAs
    -->

    <!-- Core Buttons -->
    <style name="Widget.Ath.Button.Core" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/ath_grey_45</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Ath.Utility.Sans.Medium.ExtraLarge</item>
    </style>

    <style name="Widget.Ath.Button.Core.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ath.Button.Primary</item>
    </style>

    <style name="Widget.Ath.Button.Core.Secondary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ath.Button.Secondary</item>
    </style>

    <!-- Branded Buttons -->
    <style name="Widget.Ath.Button.Branded" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ath.Button.Primary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="minHeight">48dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="iconGravity">end</item>
        <item name="rippleColor">@color/ath_grey_45</item>
    </style>

    <style name="Widget.Ath.Button.Branded.Large">
        <item name="android:textAppearance">@style/TextAppearance.Ath.Slab.Medium</item>
        <item name="icon">@drawable/ic_onboarding_icon_arrow</item>
    </style>

    <style name="Widget.Ath.Button.Branded.Small">
        <item name="android:textAppearance">@style/TextAppearance.Ath.Slab.Small</item>
        <item name="icon">@drawable/ic_cta_right_arrow</item>
    </style>

    <!-- Social Button -->
    <style name="Widget.Ath.Button.Social" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Ath.Button.Primary</item>
        <item name="textAllCaps">false</item>
        <item name="minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Ath.Utility.Sans.Medium.ExtraLarge</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="strokeColor">@color/social_button_stroke_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Ath.Button.Social</item>
        <item name="rippleColor">@color/ath_grey_45</item>
        <item name="backgroundTint">@color/ath_grey_10_raw</item>
        <item name="android:textColor">@color/ath_grey_70_raw</item>
    </style>

    <style name="ShapeAppearance.Ath.Button.Social" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.Ath.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="trackTint">@color/track_tint_color</item>
        <item name="thumbTint">@color/thumb_tint_color</item>
    </style>

    <!-- Theme Overlays for coloring buttons -->
    <style name="ThemeOverlay.Ath.Button.Primary" parent="">
        <item name="colorPrimary">@color/ath_grey_10</item>
        <item name="colorOnPrimary">@color/ath_grey_70</item>
    </style>

    <style name="ThemeOverlay.Ath.Button.Secondary" parent="">
        <item name="colorPrimary">@color/ath_grey_60</item>
        <item name="colorOnPrimary">@color/ath_grey_30</item>
    </style>

    <!-- One-off Widget Styles:
    The Section below may contain a limited number of one-off widgets.
    -->

    <style name="Widget.Ath.Button.ToggleItem" >
        <item name="android:minWidth">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/button_toggle_item_background</item>
        <item name="android:textColor">@color/button_toggle_item_text</item>
        <item name="rippleColor">@color/ath_grey_45</item>
        <item name="android:textAppearance">@style/TextAppearance.Ath.Utility.Sans.Medium.Small</item>
    </style>

    <!-- Deprecated styles -->

    <!-- minimal usage, to be replaced with new button styles shortly -->
    <style name="Widget.Ath.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_bg_tint_color</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>