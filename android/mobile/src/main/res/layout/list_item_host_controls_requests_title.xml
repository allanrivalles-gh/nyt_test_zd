<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.theathletic.rooms.ui.LiveRoomControlsRequestsTitle"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/ath_grey_45"
            android:text="@string/rooms_requested"
            android:textSize="14sp"
            style="@style/TextAppearance.Ath.Utility.Sans.Regular.ExtraSmall"
            />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:text="@{data.requestCount}"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/background_notification_badge"
            android:includeFontPadding="false"
            style="@style/TextAppearance.Ath.Utility.Sans.Regular.Small"
            tools:text="3"
            />

    </LinearLayout>

</layout>