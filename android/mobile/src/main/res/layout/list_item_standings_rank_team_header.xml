<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="data"
            type="com.theathletic.scores.standings.ui.ScoresStandingsRankAndTeamHeaderUiModel" />

    </data>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingStart="12dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp"
        android:lineSpacingMultiplier="0.95"
        android:background="@color/ath_grey_70"
        android:gravity="bottom"
        style="@style/TextAppearance.Ath.Utility.Sans.Regular.Small"
        android:textColor="@color/ath_grey_45"
        android:parameterizedString="@{data.label}"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Eastern"/>

</layout>