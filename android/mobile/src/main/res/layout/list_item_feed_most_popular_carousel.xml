<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.theathletic.feed.ui.models.FeedMostPopularCarousel" />
    </data>

    <com.theathletic.utility.ui.NestedScrollableHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blockAllParallelIntercepts="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="@{!data.isTablet}"
            app:itemSnap="@{true}"
            app:recyclerLayout="@{data.recyclerLayout}"/>

    </com.theathletic.utility.ui.NestedScrollableHost>
</layout>