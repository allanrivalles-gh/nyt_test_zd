<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:gravity="center">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/wifi_offline_dark_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_spacing_20"
        android:text="@string/global_network_offline_header"
        android:textColor="@color/white_2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        style="@style/TA.Ath.Headline.Medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/global_spacing_12"
        android:text="@string/global_network_offline"
        android:textColor="@color/text_gray_2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />

</LinearLayout>