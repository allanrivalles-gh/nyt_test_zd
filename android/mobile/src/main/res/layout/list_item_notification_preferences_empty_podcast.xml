<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ath_grey_70"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:text="@string/podcast_push_settings_title"
            style="@style/TextAppearance.Ath.Navigation"
            tools:text="Podcast Episodes"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:text="@string/podcast_push_settings_empty"
            android:textColor="@color/ath_grey_45"
            android:textSize="14sp"
            style="@style/TextAppearance.Ath.Utility.Sans.Regular.ExtraSmall"
            />

    </LinearLayout>

</layout>